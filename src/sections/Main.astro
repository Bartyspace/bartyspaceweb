---
import {Image} from 'astro:assets';
import favicon from '../assets/favicon.svg';
import grid from '../assets/GridBackground.png';
---

<section
  id="domu"
  class="flex h-screen w-screen items-center justify-center bg-gradient-to-b from-sky-600 from-40% to-indigo-950">
  <div class="background-circle"></div>
  <div
    id="gridmove"
    class="absolute flex items-center justify-center">
    <Image
      loading={'eager'}
      src={grid}
      class="border-t-4 z-0 h-screen border-b-4 flex border-white border-opacity-20 w-screen object-cover 2xl:scale-x-125 xl:border-b-[5px] xl:border-t-[5px]"
      alt="Grid background"
    />
  </div>

  <Image
    loading={'eager'}
    src={favicon}
    class="z-20 max-sm:hidden flex absolute -left-64 -top-16 overflow-hidden"
    alt="Bartyspace wolf"
  />

  <div class="z-20 flex flex-col items-start justify-center py-28">
    <h1
      class="text-center text-8xl font-bold text-white max-lg:text-5xl container leading-snug">
      Vytvářím nové standardy<br />
      pro <span class="text-emerald-400">webový design</span><br />
      a tvorbu stránek.
    </h1>
  </div>
</section>
