---
import RoundedButton from './RoundedButton.astro';

const {pos} = Astro.props;
const {link} = Astro.props;
const {buttonText} = Astro.props;
---

<div
  class="carousel__item flex-col rounded-xl border-2 p-4"
  data-pos={pos}>
  <slot />
  <RoundedButton
    text={buttonText}
    href={link}
    className="mt-4 border border-white px-4 py-2 max-lg:flex lg:flex"
  />
</div>
