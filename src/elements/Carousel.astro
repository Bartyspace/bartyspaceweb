---
import CarouselItem from '../components/CarouselItem.astro';
import Image from 'astro/components/Image.astro';
import BartysScreen from '../assets/BartyspaceScreen.png';
import HCDraci from '../assets/HCDraci.png';
---

<div class="carousel ">
  <div
    class="carousel__wrapper 3xl:h-[700px] flex h-[200px] w-full justify-center md:h-[300px] lg:h-[250px] xl:h-[400px] 2xl:h-[460px]">
    <button
      id="prev-button"
      aria-label="prev-button"
      class="carousel__button_prev hidden max-sm:flex">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
        width="40"
        height="40"
        fill="none"
        viewBox="0 0 24 24">
        <path
          stroke="#337AFF"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m15 19-7-7 7-7">
        </path>
      </svg>
    </button>
    <button
      id="next-button"
      aria-label="next-button"
      class="carousel__button_next hidden max-sm:flex">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
        width="40"
        height="40"
        fill="none"
        viewBox="0 0 24 24">
        <path
          stroke="#337AFF"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m9 5 7 7-7 7">
        </path>
      </svg>
    </button>
    <CarouselItem
      pos="3"
      buttonText="Bartyspace Labs"
      link="/">
      <Image
        src={BartysScreen}
        alt="Screen from web Bartyspace Labs"
        loading={'lazy'}
        class="w-full rounded-xl"
      />
    </CarouselItem>
    <CarouselItem
      pos="4"
      buttonText="HC Draci - Staré křečany"
      link="https://hcdraci.netlify.app/">
      <Image
        src={HCDraci}
        alt="Screen from web HC Draci"
        loading={'lazy'}
        class="w-full rounded-xl"
      />
    </CarouselItem>
    <CarouselItem
      pos="5"
      buttonText="3"
      link="/">
      <Image
        src={BartysScreen}
        alt="Screen from web Bartyspace Labs"
        loading={'lazy'}
        class="w-full rounded-xl"
      />
    </CarouselItem>
    <CarouselItem
      pos="1"
      buttonText="4"
      link="/">
      <Image
        src={BartysScreen}
        alt="Screen from web Bartyspace Labs"
        loading={'lazy'}
        class="w-full rounded-xl"
      />
    </CarouselItem>
    <CarouselItem
      pos="2"
      buttonText="5"
      link="/">
      <Image
        src={BartysScreen}
        alt="Screen from web Bartyspace Labs"
        loading={'lazy'}
        class="w-full rounded-xl"
      />
    </CarouselItem>
  </div>
</div>
